<!DOCTYPE html>
<html>
  <head>
    <title>Seed</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/112dd0d472.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% #= favicon_link_tag 'favicon.png' %>
    <%if current_user%>
      <script>
        window.currentUser = {
          "id": <%= current_user.id%>,
          "name": "<%= current_user.name%>",
          "email": "<%= current_user.email%>"
        };
      </script>
    <%end%>


  </head>

  <body>
    <%= yield %>
  </body>
</html>
